<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginVertical="10dp"
    android:paddingVertical="10dp">

    <ImageView
        android:id="@+id/imgProducto"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/caramelfrap"
        android:layout_weight="0"
        android:adjustViewBounds="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1.5"
        android:layout_marginHorizontal="15dp">

        <TextView
            android:id="@+id/titleProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="product title"
            android:textColor="@color/colorPrimary"
            android:textSize="22sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/descProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="lorem ipsum dolorum sit amet consorum delirium bastum consolem valirus kalimeth"/>

    </LinearLayout>

    <TextView
        android:id="@+id/precioProducto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="$5"
        android:textColor="@color/colorAccent"
        android:textSize="32sp"
        android:layout_weight="3"
        android:gravity="center"
        android:textStyle="bold"/>

</LinearLayout>